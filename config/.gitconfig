[user]
	name = Your Name
	email = your.email@example.com
	
[core]
	editor = cursor --wait
	autocrlf = input
	excludesfile = ~/.gitignore_global
	pager = delta
	
[init]
	defaultBranch = main
	
[pull]
	rebase = true
	
[push]
	default = simple
	autoSetupRemote = true
	
[fetch]
	prune = true
	
[merge]
	tool = cursor
	conflictstyle = diff3
	
[mergetool "cursor"]
	cmd = cursor --wait $MERGED
	
[diff]
	tool = cursor
	colorMoved = default
	
[difftool "cursor"]
	cmd = cursor --wait --diff $LOCAL $REMOTE
	
[delta]
	navigate = true
	light = false
	side-by-side = true
	line-numbers = true
	
[interactive]
	diffFilter = delta --color-only
	
[add.interactive]
	useBuiltin = false
	
[rebase]
	autoStash = true
	autoSquash = true
	
[rerere]
	enabled = true
	
[help]
	autocorrect = 1
	
[color]
	ui = auto
	
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
	
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
	
[alias]
	# Common shortcuts
	st = status
	co = checkout
	br = branch
	ci = commit
	ca = commit --amend
	df = diff
	dc = diff --cached
	lg = log --oneline --graph --decorate --all
	
	# More complex aliases
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	type = cat-file -t
	dump = cat-file -p
	
	# Show branches sorted by last modified
	recent = for-each-ref --sort=-committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
	
	# Show git aliases
	aliases = config --get-regexp alias
	
	# Delete merged branches (excluding main/master/develop)
	delete-merged = "!git branch --merged | grep -E -v '(main|master|develop|\\*)' | xargs -n 1 git branch -d"
	
	# Undo last commit but keep changes
	undo = reset --soft HEAD^
	
	# Show what I did today
	today = log --since='1 day ago' --oneline --author="$(git config user.email)"
	
	# Interactive rebase with the given number of latest commits
	reb = "!r() { git rebase -i HEAD~$1; }; r"
	
[url "git@github.com:"]
	insteadOf = https://github.com/
	
[github]
	user = your-github-username
	
[credential]
	helper = osxkeychain
	
[gpg]
	program = gpg
	
[commit]
	gpgsign = false
	
[tag]
	gpgsign = false
	
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true 